{
  "name": "zork-ts",
  "version": "1.0.4",
  "description": "Zork I: The Great Underground Empire - TypeScript Edition",
  "main": "dist/main.js",
  "bin": {
    "zork": "dist/main.js"
  },
  "type": "module",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json --noEmitOnError false || true",
    "prepublishOnly": "echo 'Build handled by CI'",
    "start": "node dist/main.js",
    "dev": "tsx src/main.ts",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "engines": {
    "node": ">=25.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jsredmond/zork-ts.git"
  },
  "bugs": {
    "url": "https://github.com/jsredmond/zork-ts/issues"
  },
  "homepage": "https://github.com/jsredmond/zork-ts#readme",
  "keywords": [
    "zork",
    "interactive-fiction",
    "text-adventure",
    "game",
    "cli",
    "infocom",
    "retro"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "fast-check": "^4.5.3",
    "zod": "^4.3.4"
  }
}
